<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.admin.fragments.AdminProses">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerInParent="true">

           <LinearLayout
               android:id="@+id/llOperator"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:layout_below="@+id/llList"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/dp8"
               android:weightSum="2">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imgPeminjaman"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_assignment_accent"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/dp8"
                       android:textSize="@dimen/text18"
                       android:text="Peminjaman"
                       android:textColor="@color/colorPrimaryDark"
                       style="@style/Base.TextAppearance.AppCompat.Title" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imgPengembalian"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_assignment_return_accent"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/dp8"
                       android:textSize="@dimen/text18"
                       android:text="Pengembalian"
                       android:textColor="@color/colorPrimaryDark"
                       style="@style/Base.TextAppearance.AppCompat.Title"/>

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>

   </RelativeLayout>

</FrameLayout>