<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.peminjaman.FormPeminjamanActivity"
    android:padding="@dimen/dp8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp8">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Nama Pegawai"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

            <AutoCompleteTextView
                android:id="@+id/autoNamaPegawai"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text16"
                android:maxLines="1"
                tools:text="Nama Pegawai"
                android:inputType="textCapCharacters"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp8">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Nama Barang"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/txtNamaInvent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text16"
                tools:text="Laptop Acer"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:id="@+id/imgInfoInvent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_info_primary"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp8">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Jumlah Pinjaman"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/edtJumlahPinjaman"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="3"
                android:maxLines="1"
                tools:text="123"
                android:textSize="@dimen/text16"
                android:inputType="numberDecimal"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp8">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tgl Pinjam"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

            <Button
                android:id="@+id/btnTglPinjam"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="pilih"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/txtTglPinjam"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Date Selected"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp8">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tgl Kembali"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

            <Button
                android:id="@+id/btnTglKembali"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="pilih"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/txtTglKembali"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Date Selected"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnTambahPinjaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp16"
            android:text=" Tambah Pinjaman "
            android:textSize="@dimen/text16"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</RelativeLayout>